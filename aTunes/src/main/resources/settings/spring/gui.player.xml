<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName" default-lazy-init="true">

	<bean id="playerControlsProgressSlider" class="net.sourceforge.atunes.gui.views.controls.playerControls.ProgressSlider" scope="prototype" init-method="initialize">
		<property name="paintIconAllowed" value="true"/>
	</bean>

	<bean id="fullScreenProgressSlider" class="net.sourceforge.atunes.gui.views.controls.playerControls.ProgressSlider" scope="prototype" init-method="initialize">
		<property name="paintIconAllowed" value="false"/>
	</bean>
	
	<bean id="playerControls" class="net.sourceforge.atunes.gui.views.panels.PlayerControlsPanel" init-method="initialize"/>


	<bean class="net.sourceforge.atunes.gui.views.panels.SecondaryPlayerControlsBuilder" scope="prototype"/>

	<bean id="secondaryControlSize" class="java.awt.Dimension">
		<constructor-arg value="30"/>
		<constructor-arg value="30"/>
	</bean>
	
	<bean id="shuffleButton" class="net.sourceforge.atunes.gui.views.controls.playerControls.SecondaryToggleControl">
		<constructor-arg>
			<ref bean="shuffleModeAction"/>
		</constructor-arg>
		<property name="preferredSize" ref="secondaryControlSize"/>
	</bean>
	<bean id="repeatButton" class="net.sourceforge.atunes.gui.views.controls.playerControls.SecondaryToggleControl">
		<constructor-arg>
			<ref bean="repeatModeAction"/>
		</constructor-arg>
		<property name="preferredSize" ref="secondaryControlSize"/>
	</bean>
	<bean id="normalizeButton" class="net.sourceforge.atunes.gui.views.controls.playerControls.NormalizationButton" init-method="initialize">
		<constructor-arg>
			<ref bean="normalizeModeAction"/>
		</constructor-arg>
		<property name="preferredSize" ref="secondaryControlSize"/>
	</bean>
	<bean id="equalizerButton" class="net.sourceforge.atunes.gui.views.controls.playerControls.EqualizerButton" init-method="initialize">
		<constructor-arg>
			<ref bean="showEqualizerAction"/>
		</constructor-arg>
		<property name="preferredSize" ref="secondaryControlSize"/>
	</bean>
	
	
	
	
	<bean id="volumeButton" class="net.sourceforge.atunes.gui.views.controls.playerControls.MuteButton">
		<constructor-arg>
			<bean class="net.sourceforge.atunes.gui.views.panels.PlayerControlsSize" factory-method="getStopMuteButtonsSize"/>
		</constructor-arg>
		<constructor-arg ref="muteAction"/>
	</bean>
	
	<bean id="volumeIconCalculator" class="net.sourceforge.atunes.gui.views.controls.playerControls.VolumeIconCalculator"/>
	
	<bean id="volumeSlider" class="net.sourceforge.atunes.gui.views.controls.playerControls.VolumeSlider"/>

</beans>
