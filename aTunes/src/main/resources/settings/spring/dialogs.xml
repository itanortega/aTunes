<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	
	default-autowire="byName" default-lazy-init="true">
	
	<bean id="exportOptionsDialog" class="net.sourceforge.atunes.gui.views.dialogs.ExportOptionsDialog" scope="prototype">
		<constructor-arg ref="frame"/>
		<constructor-arg ref="osManager"/>
	</bean>
	
	<bean id="equalizerDialog" class="net.sourceforge.atunes.gui.views.dialogs.EqualizerDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean> 

	<bean id="fileSelectionDialog" class="net.sourceforge.atunes.gui.views.dialogs.FileSelectionDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>

	<bean id="multiFolderSelectionDialog" class="net.sourceforge.atunes.gui.views.dialogs.MultiFolderSelectionDialog" scope="prototype">
		<constructor-arg ref="frame"/>
		<constructor-arg ref="osManager"/>
	</bean>

	<bean id="progressDialog" class="net.sourceforge.atunes.gui.views.dialogs.ProgressDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>

	<bean id="transferDialog" class="net.sourceforge.atunes.gui.views.dialogs.TransferProgressDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>

	<bean id="columnSelectorDialog" class="net.sourceforge.atunes.gui.views.dialogs.ColumnSetSelectorDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>

	<bean id="ripperProgressDialog" class="net.sourceforge.atunes.gui.views.dialogs.RipperProgressDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>
	
	<bean id="aboutDialog" class="net.sourceforge.atunes.gui.views.dialogs.AboutDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>
	
	<bean id="repositoryProgressDialog" class="net.sourceforge.atunes.gui.views.dialogs.RepositoryProgressDialog" scope="prototype">
		<constructor-arg ref="frame"/>
	</bean>
	
	<bean id="searchDialog" class="net.sourceforge.atunes.gui.views.dialogs.SearchDialog" scope="prototype">
		<constructor-arg ref="frame"/>	
	</bean>

</beans>
