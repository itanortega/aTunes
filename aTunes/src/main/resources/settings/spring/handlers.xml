<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	
	default-autowire="byName" default-lazy-init="true" default-init-method="registerHandler">
	
	<bean class="net.sourceforge.atunes.kernel.HandlerInitializer"/>
	
	<bean id="updateHandler" class="net.sourceforge.atunes.kernel.modules.updates.UpdateHandler">
		<property name="updatesURL" value="http://www.atunes.org/latest.xml"></property>
	</bean>
	<bean id="fullScreenHandler" class="net.sourceforge.atunes.kernel.modules.fullscreen.FullScreenHandler"/>
	<bean id="tagHandler" class="net.sourceforge.atunes.kernel.modules.tags.TagHandler"/>
	<bean id="webServicesHandler" class="net.sourceforge.atunes.kernel.modules.webservices.WebServicesHandler"/>
	<bean id="generalPurposePluginsHandler" class="net.sourceforge.atunes.kernel.modules.plugins.GeneralPurposePluginsHandler"/>
	<bean id="systemTrayHandler" class="net.sourceforge.atunes.kernel.modules.tray.SystemTrayHandler"/>
	<bean id="statisticsHandler" class="net.sourceforge.atunes.kernel.modules.statistics.StatisticsHandler"/>
	<bean id="smartPlayListHandler" class="net.sourceforge.atunes.kernel.modules.playlist.SmartPlayListHandler"/>
	<bean id="uiHandler" class="net.sourceforge.atunes.kernel.modules.ui.UIHandler"/>
	<bean id="contextHandler" class="net.sourceforge.atunes.kernel.modules.context.ContextHandler"/>
	<bean id="playListHandler" class="net.sourceforge.atunes.kernel.modules.playlist.PlayListHandler"/>
	<bean id="navigationHandler" class="net.sourceforge.atunes.kernel.modules.navigator.NavigationHandler"/>
	<bean id="podcastFeedHandler" class="net.sourceforge.atunes.kernel.modules.podcast.PodcastFeedHandler"/>
	<bean id="stateHandler" class="net.sourceforge.atunes.kernel.modules.state.ApplicationStateHandler"/>
	<bean id="favoritesHandler" class="net.sourceforge.atunes.kernel.modules.repository.favorites.FavoritesHandler"/>
	<bean id="searchHandler" class="net.sourceforge.atunes.kernel.modules.search.SearchHandler"/>
	<bean id="repositoryHandler" class="net.sourceforge.atunes.kernel.modules.repository.RepositoryHandler"/>
	<bean id="deviceHandler" class="net.sourceforge.atunes.kernel.modules.repository.DeviceHandler"/>
	<bean id="radioHandler" class="net.sourceforge.atunes.kernel.modules.radio.RadioHandler"/>
	<bean id="playerHandler" class="net.sourceforge.atunes.kernel.modules.player.PlayerHandler"/>
	<bean id="ripperHandler" class="net.sourceforge.atunes.kernel.modules.cdripper.RipperHandler"/>
	<bean id="commandHandler" class="net.sourceforge.atunes.kernel.modules.command.CommandHandler"/>
	<bean id="hotkeyHandler" class="net.sourceforge.atunes.kernel.modules.hotkeys.HotkeyHandler"/>
	<bean id="multipleInstancesHandler" class="net.sourceforge.atunes.kernel.modules.instances.MultipleInstancesHandler"/>
	<bean id="notificationsHandler" class="net.sourceforge.atunes.kernel.modules.notify.NotificationsHandler"/>
	<bean id="filterHandler" class="net.sourceforge.atunes.kernel.modules.filter.FilterHandler"/>
	<bean id="pluginsHandler" class="net.sourceforge.atunes.kernel.modules.plugins.PluginsHandler"/>
	<bean id="networkHandler" class="net.sourceforge.atunes.kernel.modules.network.NetworkHandler"/>
	<bean id="advancedPlayingModeHandler" class="net.sourceforge.atunes.kernel.modules.player.AdvancedPlayingModeHandler" />
</beans>
