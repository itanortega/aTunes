<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"

	default-autowire="byName" default-lazy-init="true">

	<bean id="lastFmService"
		class="net.sourceforge.atunes.kernel.modules.webservices.lastfm.LastFmService">
		<constructor-arg ref="state" />
		<constructor-arg ref="osManager" />
		<constructor-arg ref="frame"/>
		<constructor-arg ref="networkHandler"/>
	</bean>

	<bean id="lyricsService"
		class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.LyricsService">
		
		<property name="defaultLyricsEngines">
			<list>
				<bean class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsEngineInfo">
					<constructor-arg value="LyrDB"/>
					<constructor-arg value="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyrDBEngine"/>
					<constructor-arg value="true"/>
				</bean>
				<bean class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsEngineInfo">
					<constructor-arg value="LyricWiki"/>
					<constructor-arg value="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricWikiEngine"/>
					<constructor-arg value="true"/>
				</bean>
				<bean class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsEngineInfo">
					<constructor-arg value="LyricsDirectory"/>
					<constructor-arg value="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsDirectoryEngine"/>
					<constructor-arg value="false"/>
				</bean>
				<bean class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsEngineInfo">
					<constructor-arg value="LyrcEngine"/>
					<constructor-arg value="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyrcEngine"/>
					<constructor-arg value="false"/>
				</bean>
				<bean class="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.LyricsEngineInfo">
					<constructor-arg value="Winampcn"/>
					<constructor-arg value="net.sourceforge.atunes.kernel.modules.webservices.lyrics.engines.WinampcnEngine"/>
					<constructor-arg value="false"/>
				</bean>
			</list>
		</property>
	</bean>

	<bean id="youtubeService" class="net.sourceforge.atunes.kernel.modules.webservices.youtube.YoutubeService"/>

</beans>